<section class="boekenlijst">
    <h1>Boekenlijst</h1>
    <table class="booklist">
        <tr>
            <th>Titel</th>
            <th>Auteur</th>
            <th>Genre</th>            
        </tr>
        {{#each data as |boek|}}
        <tr>
            <td>{{boek.titel}}</td> 
            <td>{{boek.auteur}}</td> 
            <td>{{boek.genre}}</td>
            <td>
                <form action="/deleteBook" method="POST">
                    <button type="submit" class="remove" name="id" value={{boek._id}}>delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </table>
</section>