<section class="boekenlijst">
    <h1>Boekenlijst</h1>
    <table class="booklist">
        <tr>
            <th>Titel</th>
            <th>Auteur</th>
            <th>Genre</th>            
        </tr>
        {{#each bookList}}
        <tr>
            <td>{{this.titel}}</td> 
            <td>{{this.auteur}}</td> 
            <td>{{this.genre}}</td>
            <td><button type="button" class="btn-edit">Bewerken</button><button type="button" class="btn-verwijderen">Verwijderen</button></td>
        </tr>
        {{/each}}
    </table>
</section>